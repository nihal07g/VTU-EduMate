{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "lib/rag/**/*.ts",
    "scripts/**/*.ts",
    "!**/*.d.ts",
    "!**/node_modules/**"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/jest.setup.js"],
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "testTimeout": 30000,
  "globals": {
    "ts-jest": {
      "tsconfig": {
        "lib": ["es2015", "dom"],
        "types": ["jest", "node"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2015",
        "module": "commonjs"
      }
    }
  }
}